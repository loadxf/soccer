# Soccer Prediction System - Environment Variables

# Application Settings
APP_ENV=development  # development, testing, production
DEBUG=True
SECRET_KEY=your_secret_key_here
PORT=8000
HOST=127.0.0.1

# Database Configuration
DB_TYPE=postgres  # postgres, mysql, mongodb
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=soccer_prediction
DB_USER=postgres
DB_PASSWORD=password

# MongoDB Configuration (if used)
MONGO_URI=mongodb://127.0.0.1:27017/soccer_prediction

# Redis Configuration (for Celery)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0

# API Keys
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key
ESPN_API_KEY=your_espn_api_key
STATSBOMB_API_KEY=your_statsbomb_api_key

# Model Settings
MODEL_CACHE_DIR=./model_cache
DEFAULT_MODEL_VERSION=latest

# File Storage
DATA_DIR=./data
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Frontend
FRONTEND_URL=http://127.0.0.1:3000

# Email Configuration (for notifications)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_USE_TLS=True 